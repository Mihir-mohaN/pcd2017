#include<stdio.h>

void get_matrix(int x,int y,double a[][y]);
void display(int a,int b,int c,int d,double x[][b],double y[][d]);
void mat_mult(int a,int b,int c,int d,double x[][b],double y[][d]);

int main(){
	int a,b,c,d;
	
	printf("enter the number of rows and columns of the first matrix:");
	scanf("%d%d",&a,&b);
	
	double mat1[a][b];
	get_matrix(a,b,mat1);
	
	printf("enter the number of rows and columns of the second matrix:");
	scanf("%d%d",&c,&d);
	
	double mat2[c][d];
	get_matrix(c,d,mat2);
	
	display(a,b,c,d,mat1,mat2);
	
	if(b!=c){
		printf("matrix multiplication is not possible");
	}
	else{
	mat_mult(a,b,c,d,mat1,mat2);
	}
	return 0;
}

void get_matrix(int x,int y,double mat[x][y]){
	printf("enter elements of first matrix:");
	for(int i=0;i<x;i++){
		for(int j=0;j<y;j++){
			scanf("%lf",&mat[i][j]);
		}
	}
}

void display(int a,int b,int c,int d,double mat1[a][b],double mat2[c][d]){
	printf("matrix 1:\n");
	for(int i=0;i<a;i++){
		for(int j=0;j<b;j++){
			printf("%lf\t",mat1[i][j]);
		}
		printf("\n");
	}
	printf("matrix 2:\n");
	for(int i=0;i<c;i++){
		for(int j=0;j<d;j++){
			printf("%lf\t",mat2[i][j]);
		}
		printf("\n");
	}
}

void mat_mult(int a,int b,int c,int d,double mat1[a][b],double mat2[c][d]){
	double mat3[a][d];
	int i,j,k;
	double sum=0;
	for(i=0;i<a;i++){
		for(j=0;j<d;j++){
			for(k=0;k<c;k++){
				sum+=mat1[i][k]*mat2[k][j];
			}
			mat3[i][j]=sum;
			sum=0;
		}
	}
	printf("result matrix:\n");
	for(i=0;i<a;i++){
		for(j=0;j<d;j++){
			printf("%lf\t",mat3[i][j]);
		}
		printf("\n");
	}
}
