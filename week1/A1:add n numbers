//addition of n numbers
#include<stdio.h>
int findsum(int n){
	int array[n],i,sum=0;
	for(i=0;i<n;i++){
		int j=i+1;
		printf("enter %d number:\n",j);
		scanf("%d",&array[i]);
		sum+=array[i];
	}
	return sum;
}

int main(){
	int n;
	printf("how many numbers do you want to add:");
	scanf("%d",&n);
	int sum=findsum(n);
	printf("the sum is: %d",sum);
}
